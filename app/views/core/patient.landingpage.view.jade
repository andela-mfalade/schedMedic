div.userPage
  div.sideMArgin
    div.paddingTopMd
      div.row.card-panel
        div.col.s4
          ul.collection.with-header
            li.collection-header.confirmed 
              h5 Confirmed Appointments

            div(class="alert", ng-if="confirmedAppointments.length < 1")
              h6 You have no confirmed appointment

            li(class="collection-item" ng-repeat="schedule in confirmedAppointments")
              div.row
                div.col.s8
                  p
                    b {{schedule.message}}
                  p Dr {{schedule.doc_firstname + ' ' + schedule.doc_lastname}}
                  p
                    i.mdi-action-list
                      |  {{schedule.SelectedDay}}
                  p {{schedule.startTime + ' to ' + schedule.endTime}}
                div.col.s4
                  div.btmFix
                    br
                    br
                    br
                    br
                    br
                    i(class="small mdi-editor-mode-edit scheduleCta preview", ng-click="editAppointment(schedule)")
                    i(class="small mdi-action-delete scheduleCta deleteApp", ng-click="trashAppointment(schedule)")


        div.col.s4
