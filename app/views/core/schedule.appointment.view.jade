                    i.mdi-content-send.right

                  
        div(class="col s8", ng-if="schduleFixed")
          div.card-panel.toastr
            div(class="row fadeInDown", ng-if="schduleFixed")      
              p Your request has been submitted and a notification has been sent to Dr {{scheduledDoctor.firstname + ' ' + scheduledDoctor.lastname}}.
              p You will receive a notfication when your schedule gets confirmed.
              a(ui-sref="home") Go back to your home page

        div.col.s4
          div.row
            div.card-panel.appointment
              div
                div.card-content
                  img(src="{{scheduledDoctor.avatarUrl}}")
                  p.card-title {{scheduledDoctor.firstname + ' ' + scheduledDoctor.lastname}}
                div.card-action
                  p {{scheduledDoctor.specialization}}
                  p {{scheduledDoctor.email}}

          
                   