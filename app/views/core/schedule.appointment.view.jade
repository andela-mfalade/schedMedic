div.rowdiv(class="customErrorAlert", ng-if="!formIsValid")
  p(ng-bind="formErrorMessage")
div.userPage
  div.sideMArgin
    div.paddingTopMd
      div.row
        div(class="col s8", ng-show="!schduleFixed")
          div.card-panel.parentCard
            div.colorfulHeader
              h5 Schedule an appointment with Dr {{scheduledDoctor.firstname + '.'}}
            div(class="row center-align")
              div
                div.input-field
                  input(id="message", type="text", class="validate", ng-model="schedule.message")
                  label(for="message") Title
                div.input-field
                  input(type="text", class="datepicker", id="date", ng-model="schedule.SelectedDay") 
                  label(for="date") Select date
                div.input-field
